.product
  border: 1px solid black
  border-radius: 5px 5px 25px 5px
  width: 150px
  height: 250px
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  &-buy-button
    background-color: #12aa54
    border: none 
    color: white
    border-radius: 25px 0px 25px 0px

  &-img
    width: 100%
    height 150px
  &-price
    margin-left: 10px
  &-name
    width: 100%
    text-align: center